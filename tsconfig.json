{
  // https://www.typescriptlang.org/ja/tsconfig
  "compilerOptions": {
    // Type Checking
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": false, // TODO
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    // "alwaysStrict": true,                 // enabled by "strict"
    // "strictBindCallApply": true,          // enabled by "strict"
    // "strictFunctionTypes": true,          // enabled by "strict"
    // "strictNullChecks": true,             // enabled by "strict"
    // "strictPropertyInitialization": true, // enabled by "strict"
    // "noImplicitAny": true,                // enabled by "strict"
    // "noImplicitThis": true,               // enabled by "strict"
    // "useUnknownInCatchVariables": true,   // enabled by "strict"

    // Modules
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Emit
    "downlevelIteration": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "newLine": "lf",
    "noEmitOnError": true,

    // JavaScript Support
    "allowJs": false,

    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Language and Environment
    "target": "es6",
    "noLib": true,

    // Projects
    "incremental": false,

    // Completeness
    "skipLibCheck": true, // TODO

    "outDir": "dist"
  },
  "include": ["src"]
}
